<div class="container login">
  <% if @errors%>
    <% @errors.each do |error| %>
      <p><%= error %></p>
    <% end %>
  <% end %>
  <%= form_for(@admin) do |f| %>
    <p>Email: <%= f.text_field :email %></p>
    <p>fullname: <%= f.text_area :fullname %></p>
    <p>about: <%= f.text_field :about, class: "content" %></p>
    <%= f.submit %>
  <% end %>
</div>