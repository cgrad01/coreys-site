<div id="blog-container">
  <a name="blog" id="blog"></a><h2 id="blog-header">BLOG</h2>
  <div id="posts-container" class="row posts">
    <div class="col-md-6">
      <h3 id="post-type">Cultural Posts</h3>
        <% Post.filter_posts("Culture").each do |post| %>
          <p id="post-link"><%= link_to "#{post.title} - #{post.date}", "#", {"data-toggle": "modal", "data-target": "#postModal", href: post_path(post)}%></p>
          <p id="post-content"><%= post.content[0..100] %>... <%= link_to "read more", post_path(post), {"data-toggle": "modal", "data-target": "#postModal", href: post_path(post)} %></p>
        <% end %>
    </div>

    <div class="col-md-6">
