<%= form_tag login_path do %>
<div class="form-group">
  <%= label_tag :email %>
  <%= text_field_tag :email, nil, placeholder: "email@example.com", class: "form-control" %>

  <%= label_tag :password %>
  <%= text_field_tag :password, nil, placeholder: "password", class: "form-control" %>

  <%= submit_tag "Login", class: "btn btn-default" %>
</div>
<% end %>