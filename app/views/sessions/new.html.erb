<% flash.each do |key, value| %>
  <div class="alert alert-<%= key %>"><%= value.capitalize %>!</div>
<% end %>

<%= form_tag login_path do %>
  <%= label_tag :email %>
  <%= text_field_tag :email, nil, placeholder: "email@example.com", class: "form-control" %>

  <%= label_tag :password %>
  <%= password_field_tag :password, nil, placeholder: "password", class: "form-control" %>

  <%= submit_tag "Login", class: "btn btn-default" %>
<% end %>